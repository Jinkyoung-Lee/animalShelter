<% layout('layouts/boilerplate') %>
    <!-- Edit animal form -->
    <div class="row">
        <div class="mb-3">
            <h3 class="text-center">Edit the registered animal information</h3>
        </div>
        <div class="col-6 offset-3">
            <form action="/shelters/<%= shelter._id %>/animals/<%= animal._id %>?_method=PUT" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label for="breed" class="form-label">Breed</label>
                    <input class="form-control" type="text" name="animal[breed]" id="breed" value="<%= animal.breed %>" required />
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input class="form-control" type="text" name="animal[image]" id="image" required value="<%= animal.image %>" />
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <p class="form-label">Sex</p>
                    <input class="form-check-input" type="radio" name="animal[sex]" id="female" value="female"
                        required />
                    <label for="female" class="form-check-label">Female</label>
                    <input class="form-check-input" type="radio" name="animal[sex]" id="male" value="male" required />
                    <label for="male" class="form-check-label">Male</label>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="dateRescued" class="form-label">Date rescued</label>
                    <input class="form-control" type="date" name="animal[dateRescued]" id="dateRescued" required />
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location rescued</label>
                    <input class="form-control" type="text" name="animal[locationRescued]" id="location" value="<%= animal.locationRescued %>" required />
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input class="form-control" type="text" name="animal[age]" id="age" value="<%= animal.age %>" required />
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" name="animal[description]" id="description" rows="3"
                        required><%= animal.description %></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Edit</button>
                </div>
            </form>
            <a href="/shelters/<%= shelter._id %>" class="text-muted font-medium">Back to Shelter</a>
        </div>
    </div>
