<% layout('layouts/boilerplate') %>
    <div class="row mx-auto">
        <div class="mb-3">
            <h3 class="text-center">Edit shelter</h3>
        </div>
        <div class="col-6 offset-3">
            <form action="/shelters/<%= shelter._id %>?_method=PUT" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                <!-- Title -->
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input class="form-control" type="text" id="title" name="shelter[title]"
                        value="<%= shelter.title %>" required />
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <!-- Image -->
                <div class="mb-3">
                    <label for="image" class="form-label">Images</label>
                    <input class="form-control" type="file" name="image" id="image" multiple />
                </div>
                <div class="mb-3">
                    <% shelter.images.forEach((image, i) => { %>
                        <img src="<%= image.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%= image.filename %>">
                        </div>
                        <label class="font-small" for="image-<%= i %>">Delete?</label>
                    <% }); %>
                </div>
                <!-- Location -->
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input class="form-control" type="text" id="location" name="shelter[location]"
                        value="<%= shelter.location %>" required />
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <!-- Phone -->
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input class="form-control" type="text" id="phone" name="shelter[phone]"
                        value="<%= shelter.phone %>" placeholder="Please put numbers only" required />
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <!-- Description -->
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" type="text" name="shelter[description]" id="description" rows="3"
                        required><%= shelter.description %></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Shelter</button>
                </div>
            </form>
            <a href="/shelters/<%= shelter._id %>" class="text-muted font-medium">Back to Shelter</a>
        </div>
    </div>